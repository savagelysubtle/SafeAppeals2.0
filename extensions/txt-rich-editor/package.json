{
  "name": "txt-rich-editor",
  "displayName": "Rich Text Editor for Documents",
  "description": "A rich text editor for .txt, .gdoc, and .docx files with visual formatting",
  "version": "1.0.0",
  "publisher": "vscode",
  "license": "MIT",
  "engines": {
    "vscode": "^1.70.0"
  },
  "extensionKind": [
    "workspace",
    "ui"
  ],
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "txtRichEditor.editor",
        "displayName": "Rich Text Editor",
        "selector": [
          {
            "filenamePattern": "*.txt"
          },
          {
            "filenamePattern": "*.gdoc"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "txtRichEditor.docxEditor",
        "displayName": "Rich Text Editor (DOCX)",
        "selector": [
          {
            "filenamePattern": "*.docx"
          }
        ],
        "priority": "default"
      }
    ],
    "languages": [
      {
        "id": "plaintext",
        "extensions": [
          ".txt",
          ".gdoc"
        ]
      }
    ],
    "commands": [
      {
        "command": "txtRichEditor.openWithRichEditor",
        "title": "Open with Rich Text Editor",
        "category": "Text Editor"
      },
      {
        "command": "txtRichEditor.exportDocx",
        "title": "Export as DOCX",
        "category": "Text Editor"
      },
      {
        "command": "txtRichEditor.importDocx",
        "title": "Import DOCX",
        "category": "Text Editor"
      },
      {
        "command": "txtRichEditor.addToVoidChat",
        "title": "Add Selection to Void Chat",
        "category": "Text Editor",
        "enablement": "richTextEditorActive"
      },
      {
        "command": "txtRichEditor.inlineEdit",
        "title": "Void Inline Edit",
        "category": "Text Editor",
        "enablement": "richTextEditorActive"
      },
      {
        "command": "txtRichEditor.showLogs",
        "title": "Show Rich Text Editor Logs",
        "category": "Text Editor"
      }
    ],
    "keybindings": [
      {
        "command": "txtRichEditor.addToVoidChat",
        "key": "ctrl+l",
        "mac": "cmd+l",
        "when": "richTextEditorActive && editorTextFocus"
      },
      {
        "command": "txtRichEditor.inlineEdit",
        "key": "ctrl+k",
        "mac": "cmd+k",
        "when": "richTextEditorActive && editorTextFocus"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "txtRichEditor.openWithRichEditor",
          "when": "resourceExtname == '.txt'",
          "group": "navigation"
        },
        {
          "command": "txtRichEditor.openWithRichEditor",
          "when": "resourceExtname == '.gdoc'",
          "group": "navigation"
        },
        {
          "command": "txtRichEditor.openWithRichEditor",
          "when": "resourceExtname == '.docx'",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "txtRichEditor.exportDocx",
          "when": "activeCustomEditor == 'txtRichEditor.editor'",
          "group": "navigation"
        },
        {
          "command": "txtRichEditor.importDocx",
          "when": "activeCustomEditor == 'txtRichEditor.editor'",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "compile": "gulp compile-extension:txt-rich-editor",
    "watch": "gulp watch-extension:txt-rich-editor"
  },
  "dependencies": {
    "html-to-docx": "^1.8.0",
    "jszip": "^3.10.1",
    "mammoth": "^1.6.0"
  },
  "devDependencies": {
    "@types/jszip": "^3.4.1",
    "@types/node": "20.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/vscode.git"
  }
}
